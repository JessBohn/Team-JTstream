<h3>Register</h3>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	    <div class="error_messages">
	      <h2>Form is invalid</h2>
	      <ul>
	        <% for message in @user.errors.full_messages %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
  	<% end %>

	<p>
	<input name="authenticity_token" type="hidden" value="token_value">
	    <%= f.label :name %>
	    <%= f.text_field :name %>
  	</p>

  	<p>
	    Are you registering as a student or a mentor?<br />
	    <%= select_tag(:type, options_for_select([[''], ['Student'], ['Mentor']])) %>
  	</p>
  	<p>
	    If you are registering as a mentor, please enter your provided access code<br />
	    <input type="text" name="mentor_code"> <%= flash[:alert_mentor] %>
  	</p>
  	<p>
	    What topics are you well versed in? (optional)<br />
	    <%= f.text_area :topics %>
  	</p>
  	<p>
	    <%= f.label :phone_number, class: 'phone' %> <span class='optional'>(optional)</span><br>
	    <%= f.text_field :phone %>
  	</p>
  	<p>
	    Provide an email which will be used for Login and contact<br />
	    <%= f.text_field :email %>
  	</p>
  	<p>
	    <%= f.label :password %>
	    <%= f.password_field :password %>
  	</p>
  	<p>
	    <%= f.label :password_confirmation %>
	    <%= f.password_field :password_confirmation %><%= flash[:alert_password] %>
  	</p>
 	<%= f.submit "Finalize Registration", class: 'button-primary'%>
<% end %>
